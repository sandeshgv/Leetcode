#include <iostream>
using namespace std;

void remove(int a[], int n, int key){
	
	int j = 0;

	for ( int i = 0 ; i < n ; i++)	{
		
		if (a[i] != a[i+1]){
		a[j] = a[i] ; 
	//	cout << a[i];
		j++;
		}
	}
	
	for ( int j = 0 ; j < n ; j++)
	cout << a[j] ;
	
	cout << j;
	
	
}

int main() {
	// your code goes here
	
	int a[5] = {1,1,2,3,3};
	remove(a,5,1);
	
	return 0;
}
